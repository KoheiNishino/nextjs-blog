{
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next",
    "build": "next build",
    "start": "next start",
    "analyze": "ANALYZE=true next build",
    "check": "tsc && prettier --list-different . && npm run lint:js && npm run lint:css && npm run test",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "lint:js": "next lint --dir . --file '**/*.@(js|ts|tsx)'",
    "format": "prettier --write . && npm run lint:js -- --fix && npm run lint:css -- --fix",
    "test": "jest",
    "postbuild": "next-sitemap",
    "preinstall": "npx only-allow yarn",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "classnames": "2.3.2",
    "date-fns": "2.29.3",
    "gray-matter": "4.0.3",
    "next": "13.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark": "14.0.2",
    "remark-html": "15.0.1",
    "sharp": "^0.31.2",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.0.7",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/gtag.js": "^0.0.12",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "autoprefixer": "^10.4.13",
    "eslint": "8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "13.0.7",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.1.0",
    "next-sitemap": "^3.1.42",
    "postcss": "^8.4.20",
    "prettier": "2.8.1",
    "sass": "^1.58.3",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "tailwindcss": "^3.2.4"
  }
}
